@if (Session["UserID"] == null)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("你好，请登录！", "Login", "User", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("你好，" + Session["Username"].ToString() + " !", "Index", "User", routeValues: null, htmlAttributes: new { title = "点击进入用户操作台" })
        </li>
        <li>
            @Html.ActionLink("点击退出", "Logout", "User")
        </li>
    </ul>
